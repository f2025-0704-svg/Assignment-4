#include <iostream>
#include <vector>
#include <string>
using namespace std;


struct Student {
    string name;
    int id;
};

struct Course {
    string courseName;
    string courseCode;
    vector<Student> students;
};

int main() {
    int numCourses;
    cout << "Enter number of courses: ";
    cin >> numCourses;

    vector<Course> courses;

    for (int i = 0; i < numCourses; i++) {
        Course c;
        int numStudents;

        cout << "\nEnter details for Course " << i + 1 << endl;

        cout << "Course Name: ";
        cin >> c.courseName;

        cout << "Course Code: ";
        cin >> c.courseCode;

        cout << "Number of enrolled students: ";
        cin >> numStudents;

        for (int j = 0; j < numStudents; j++) {
            Student s;

            cout << "Enter student " << j + 1 << " name: ";
            cin >> s.name;

            cout << "Enter student " << j + 1 << " ID: ";
            cin >> s.id;

            c.students.push_back(s);
        }

        courses.push_back(c);
    }

    cout << "\n Course Enrollment Details \n";
    for (int i = 0; i < courses.size(); i++) {
        cout << "\nCourse Name: " << courses[i].courseName << endl;
        cout << "Course Code: " << courses[i].courseCode << endl;
        cout << "Enrolled Students:\n";

        for (int j = 0; j < courses[i].students.size(); j++) {
            cout << "  Name: " << courses[i].students[j].name
                 << ", ID: " << courses[i].students[j].id << endl;
        }
    }

    return 0;
}
